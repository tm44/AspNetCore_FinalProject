@model IEnumerable<PeopleNotes.Classes.Note>
@{

    <div id="PlaceHolderHere"></div>

    <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#addNote" data-url="@Url.Action("Create", "Note")" data-personid="@Model.FirstOrDefault()?.PersonId">Create</button>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.Text)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var n in Model)
            {
                <tr>
                    <td>@n.Text</td>
                </tr>
            }
        </tbody>
    </table>
}
